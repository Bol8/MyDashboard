@model Repository.Linea_pedido_c

<div class="row">
    <div class="col-xs-4">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Info. pedido [cliente]</h3>
            </div><!-- /.box-header -->
            <div class="box-body">

                @Html.Action("Details", "PedidoC", new { id = ViewBag.Numped })

            </div>

        </div>
    </div>

    <div class="col-xs-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Añadir nuevo detalle </h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="col-xs-4">
                    <small>Producto:</small><br>
                    @Html.DropDownList("idArticulo", new SelectList(ViewBag.idArticulo, "Value", "Text"), new { @Class = "form-control input-sm" })
                    <br />

                    <small>Cantidad:</small><br />

                    @Html.TextBox("Cantidad", String.Empty, new { @Class = "form-control input-sm" })
                    <br /> <br/>  

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
                

            </div>

        </div>
    </div>

    <div class="col-xs-12">
        @Html.Action("Index", "LineaPedidoC", new { numPed = ViewBag.NumPed })
    </div>

</div>

