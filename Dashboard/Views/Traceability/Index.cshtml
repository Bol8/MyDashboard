@model IEnumerable<Domain.Models.StoreProductProvider.MStoreProductProvider>

@{
    ViewBag.Title = "Trazabilidad hacia atrás";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.bootstrap.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-md-12">
        <div class="nav-tabs-custom flat">

            <ul class="nav nav-tabs">
                <li role="presentation" class="active">
                    <a href="#">Hacia atrás</a>
                </li>
                <li>
                    <a href="#">Interna</a>
                </li>
                @*<li>@Ajax.ActionLink("Interna", "DeliveryNotes", new { id = ViewBag.IdProvider }, new AjaxOptions { UpdateTargetId = "ProviderOptions", InsertionMode = InsertionMode.Replace })</li>*@
                <li>
                    <a href="#">Hacia adelante</a>
                </li>
            </ul>

            <div id="Container">
                <div class="BaseHeader">
                    @Ajax.ActionLink("Nuevo", "Create", "Traceability", null, new AjaxOptions { UpdateTargetId = "Container", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary pull-right flat" })
                </div>

                <div class="BaseBody">
                    <table id="example2" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.FechaRecogida)</th>
                                <th>@Html.DisplayNameFor(model => model.NombreProducto)</th>
                                <th>@Html.DisplayNameFor(model => model.NombreProveedor)</th>
                                <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                                <th>@Html.DisplayNameFor(model => model.Unidad)</th>
                                <th>@Html.DisplayNameFor(model => model.Lote)</th>
                                <th>@Html.DisplayNameFor(model => model.CodigoInterno)</th>
                                <th>@Html.DisplayNameFor(model => model.Ubicacion)</th>
                                @*<th>@Html.DisplayNameFor(model => model.Al)</th>*@
                                <th>Opciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.Id)</td>
                                    <td>@Html.DisplayFor(model => item.FechaRecogida)</td>
                                    <td>@Html.DisplayFor(model => item.NombreProducto)</td>
                                    <td>@Html.DisplayFor(model => item.NombreProveedor)</td>
                                    <td>@Html.DisplayFor(model => item.Cantidad)</td>
                                    <td>@Html.DisplayFor(model => item.Unidad)</td>
                                    <td>@Html.DisplayFor(model => item.Lote)</td>
                                    <td>@Html.DisplayFor(model => item.CodigoInterno)</td>
                                    <td>@Html.DisplayFor(model => item.Ubicacion)</td>

                                    <td>
                                        @Ajax.ActionLink(" ", "EditArticle", "Proveedor", new { idArticle = item.Id },
                                    new AjaxOptions { UpdateTargetId = "Container", InsertionMode = InsertionMode.Replace },
                                    new { Class = "btn btn-default flat btn-sm glyphicon glyphicon-pencil", title = "Editar" })

                                        @*@Html.ActionLink(" ", "Edit", "Store", new { idStore = ViewBag.idStore, idArticle = item.Id }, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-pencil", title = "Editar" })*@
                                        <span> </span>
                                        @Ajax.ActionLink(" ", "DeleteArticle", "Proveedor", new { idArticle = item.Id },
                                    new AjaxOptions { UpdateTargetId = "ProviderOptions", InsertionMode = InsertionMode.Replace },
                                    new { Class = "btn btn-default flat btn-sm glyphicon glyphicon-trash", title = "Eliminar" })
                                        @*@Html.ActionLink(" ", "DeleteConfirmed", "Store", new { idStore = ViewBag.idStore, idArticle = item.Id }, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-trash", title = "Eliminar" })*@
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


    
<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/1.0.7/js/dataTables.responsive.min.js" type="text/javascript"></script>
<!-- page script -->

<script type="text/javascript">
    $(function () {
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json",
            }
        });
    });
</script>
