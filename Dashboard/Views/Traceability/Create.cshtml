@model Domain.Models.StoreProductProvider.MStoreProductProviderCreate
    
@{
    ViewBag.Title = "Nuevo registro";
}

<div class="row">
    <div class="col-xs-12">

        <div class="FormHeader">
            <h5>@ViewBag.Title</h5>
            <hr />
        </div>

        <div class="FormBody">
            @*@using (Ajax.BeginForm("Create", "Traceability", null, new AjaxOptions { UpdateTargetId = "ProviderOptions", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))*@
            @using(Html.BeginForm("Create","Traceability",FormMethod.Post,null))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="col-xs-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.FechaRecogida, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FechaRecogida, new {htmlAttributes = new {@class = "form-control CformControl"}})
                                <small>@Html.ValidationMessageFor(model => model.FechaRecogida, "", new {@class = "text-danger"})</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdProducto, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.IdProducto, Model.ListProducts, "-- Select --", new {@Class = "form-control input-sm", style = "max-width:100%", id = "dropProduct"})
                                <small>@Html.ValidationMessageFor(model => model.IdProducto, "", new {@class = "text-danger"})</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Cantidad, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Cantidad, new {htmlAttributes = new {@class = "form-control CformControl"}})
                                <small>@Html.ValidationMessageFor(model => model.Cantidad, "", new {@class = "text-danger"})</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Unidad, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Unidad, new {htmlAttributes = new {@class = "form-control CformControl"}})
                                <small>@Html.ValidationMessageFor(model => model.Unidad, "", new {@class = "text-danger"})</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Lote, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Lote, new {htmlAttributes = new {@class = "form-control CformControl"}})
                                <small>@Html.ValidationMessageFor(model => model.Lote, "", new {@class = "text-danger"})</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CodigoInterno, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CodigoInterno, new { htmlAttributes = new { @class = "form-control CformControl" } })
                                <small>@Html.ValidationMessageFor(model => model.CodigoInterno, "", new { @class = "text-danger" })</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Ubicacion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Ubicacion, new { htmlAttributes = new { @class = "form-control CformControl" } })
                                <small>@Html.ValidationMessageFor(model => model.Ubicacion, "", new { @class = "text-danger" })</small>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary flat" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-xs-12">
              @*  @Ajax.ActionLink("Volver", "Articles", "Proveedor", new { id = Model.IdProveedor }, new AjaxOptions { UpdateTargetId = "ProviderOptions", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-default flat" })*@
                @Html.ActionLink("Volver", "Index", "Traceability", null, new { @class = "btn btn-default flat" })
            </div>

        </div>
    </div><!-- /.col -->
</div><!-- /.row -->

<br />




