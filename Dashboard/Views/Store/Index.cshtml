@model IEnumerable<Domain.Models.AlmacenProducto.mAlmacenProducto>

@{ 
    ViewBag.Title = "Almacén";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.bootstrap.min.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-xs-12">
        <div class="box box-default flat">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
                @Html.ActionLink("Añadir articulo", "Create", "Store", new { idStore = ViewBag.idStore}, new { @class = "btn btn-primary pull-right flat" })
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"  width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Article.Codigo)</th>
                            <th>@Html.DisplayNameFor(model => model.Lote)</th>
                            <th>@Html.DisplayNameFor(model => model.Article.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Article.IVA)</th>
                            <th>@Html.DisplayNameFor(model => model.Article.Precio)</th>
                            <th>@Html.DisplayNameFor(model => model.Article.Peso) (gr.)</th>
                            <th>@Html.DisplayNameFor(model => model.Stock)</th>
                            <th>@Html.DisplayNameFor(model => model.Article.stockMin)</th>
                            <th>@Html.DisplayNameFor(model => model.Article.stockMax)</th>
                            @*<th>@Html.DisplayNameFor(model => model.Article.Descripcion)</th>*@
                          
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.Article.Codigo)</td>
                                <td>@Html.DisplayFor(model => item.Lote)</td>
                                <td>@Html.DisplayFor(model => item.Article.Nombre)</td>
                                <td>@Html.DisplayFor(model => item.Article.sIVA)%</td>
                                <td>@Html.DisplayFor(model => item.Article.Precio) €</td>
                                <td>@Html.DisplayFor(model => item.Article.Peso) gr.</td>
                                <td>@Html.DisplayFor(model => item.Stock)</td>
                                <td>@Html.DisplayFor(model => item.Article.stockMin)</td>
                                <td>@Html.DisplayFor(model => item.Article.stockMax)</td>
                                @*<td>@Html.DisplayFor(model => item.Article.Descripcion)</td>*@
                                
                                <td>
                                    @Html.ActionLink(" ", "Edit", "Store", new { idStore = ViewBag.idStore , idArticle = item.Articulo }, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-pencil", title = "Editar" })
                                    <span> </span>
                                    @Html.ActionLink(" ", "DeleteConfirmed", "Store", new { idStore = ViewBag.idStore, idArticle = item.Articulo }, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-trash", title = "Eliminar" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->

<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/1.0.7/js/dataTables.responsive.min.js" type="text/javascript"></script>
<!-- page script -->



<script type="text/javascript">
    $(function () {
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json",
            }
        });
    });
</script>

