@model IEnumerable<Domain.Models.Articulo.mArticle>


@{
    ViewBag.Title = "Articulos";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.bootstrap.min.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-xs-12">
        <div class="box box-default flat">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
                @Html.ActionLink("Nuevo", "Create", "Article", null, new { @class = "btn btn-primary pull-right flat" })
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example2"  class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"  width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Precio)</th>
                            <th>@Html.DisplayNameFor(model => model.sIVA)</th>
                            <th>@Html.DisplayNameFor(model => model.sTipo)</th>
                            <th>@Html.DisplayNameFor(model => model.Peso) (gr.)</th>
                            <th>@Html.DisplayNameFor(model => model.stockMin)</th>
                            <th>@Html.DisplayNameFor(model => model.stockMax)</th>
                          
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.Codigo)</td>
                                <td>@Html.DisplayFor(model => item.Nombre)</td>
                                <td>@Html.DisplayFor(model => item.Precio)</td>
                                <td>@Html.DisplayFor(model => item.sIVA)</td>
                                <td>@Html.DisplayFor(model => item.sTipo)</td>
                                <td>@Html.DisplayFor(model => item.Peso) (gr.)</td>
                                <td>@Html.DisplayFor(model => item.stockMin)</td>
                                <td>@Html.DisplayFor(model => item.stockMax)</td>

                                <td>
                                    @Html.ActionLink(" ", "Edit", "Article", new { id = item.IdArticulo }, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-pencil", title = "Editar" })
                                    <span> </span>
                                    @Html.ActionLink(" ", "DeleteConfirmed", "Article", new { id = item.IdArticulo }, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-trash", title = "Eliminar" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
<!-- DATA TABES SCRIPT -->

<script src="~/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js"></script>

<!-- page script -->

<script type="text/javascript">
    $(function () {
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json",
            }
        });
    });
</script>
