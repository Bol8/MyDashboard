@model IEnumerable<Repository.Pedido_p>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.bootstrap.min.css" rel="stylesheet" type="text/css" />


<div class="col-md-12">
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
            <li>@Ajax.ActionLink("ListProducts", "Articles", new { id = ViewBag.IdProvider }, new AjaxOptions { UpdateTargetId = "ProviderOptions", InsertionMode = InsertionMode.Replace })</li>
            <li role="presentation" class="active"><a href="#">Albaranes</a></li>
            <li role="presentation"><a href="#">Historial</a></li>
        </ul>

        <div class="BaseHeader">
            @Html.ActionLink("Nuevo", "CreateD", "", new { idStore = ViewBag.idStore }, new { @class = "btn btn-primary pull-right flat" })
        </div>

        <div class="BaseBody">
            <table id="example2" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Num_ped)</th>
                        <th>@Html.DisplayNameFor(model => model.FormaPago.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.TiposPedido.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Fecha_A)</th>
                        <th>@Html.DisplayNameFor(model => model.Total)</th>
                        <th>@Html.DisplayNameFor(model => model.Observaciones)</th>
                       

                        <th>Opciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => item.Num_ped)</td>
                            <td>@Html.DisplayFor(model => item.FormaPago.Nombre)</td>
                            <td>@Html.DisplayFor(model => item.TiposPedido.Nombre)</td>
                            <td>@Html.DisplayFor(model => item.Fecha_A)</td>
                            <td>@Html.DisplayFor(model => item.Total)</td>
                            <td>@Html.DisplayFor(model => item.Observaciones)</td>

                            <td>
                                @Html.ActionLink(" ", "Edit", "Store", new { idStore = ViewBag.idStore}, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-pencil", title = "Editar" })
                                <span> </span>
                                @Html.ActionLink(" ", "DeleteConfirmed", "Store", new { idStore = ViewBag.idStore }, new { @class = "btn btn-default flat btn-sm glyphicon glyphicon-trash", title = "Eliminar" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>

    </div>
</div>

<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/1.0.7/js/dataTables.responsive.min.js" type="text/javascript"></script>
<!-- page script -->



