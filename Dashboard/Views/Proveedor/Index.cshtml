@model IEnumerable<Domain.Models.Proveedor.mProveedor>

@{ 
    ViewBag.Title = "Proveedores";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.bootstrap.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-xs-12">
        <div class="box box-default flat">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
                @Html.ActionLink("Nuevo", "Create", "Proveedor", null, new { @class = "btn btn-primary pull-right flat" })
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NIF)</th>
                            <th>@Html.DisplayNameFor(model => model.R_Sanitario)</th>
                            @*<th>@Html.DisplayNameFor(model => model.RazonSocial)</th>*@
                            <th>@Html.DisplayNameFor(model => model.NombreComercial)</th>
                            <th>@Html.DisplayNameFor(model => model.Domicilio)</th>
                            <th>@Html.DisplayNameFor(model => model.Poblacion)</th>
                            <th>@Html.DisplayNameFor(model => model.Provincia)</th>
                            <th>@Html.DisplayNameFor(model => model.Pais)</th>
                            <th>@Html.DisplayNameFor(model => model.CP)</th>
                            <th>@Html.DisplayNameFor(model => model.Mail)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.Movil)</th>
                            @*<th>@Html.DisplayNameFor(model => model.sEstado)</th>*@
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.NIF)</td>
                                <td>@Html.DisplayFor(model => item.R_Sanitario)</td>
                                @*<td>@Html.DisplayFor(model => item.RazonSocial)</td>*@
                                <td>@Html.DisplayFor(model => item.NombreComercial)</td>
                                <td>@Html.DisplayFor(model => item.Domicilio)</td>
                                <td>@Html.DisplayFor(model => item.Poblacion)</td>
                                <td>@Html.DisplayFor(model => item.Provincia)</td>
                                <td>@Html.DisplayFor(model => item.Pais)</td>
                                <td>@Html.DisplayFor(model => item.CP)</td>
                                <td>@Html.DisplayFor(model => item.Mail)</td>
                                <td>@Html.DisplayFor(model => item.Telefono)</td>
                                <td>@Html.DisplayFor(model => item.Movil)</td>
                                @*<td>@Html.DisplayFor(model => item.sEstado)</td>*@
                                <td>
                                    @Html.ActionLink(" ", "Details", "Proveedor", new { id = item.IdProveedor }, new { @class = "btn btn-default btn-sm flat glyphicon glyphicon-eye-open", title = "Ver" })
                                    <span> </span>
                                    @Html.ActionLink(" ", "Edit", "Proveedor", new { id = item.IdProveedor }, new { @class = "btn btn-default btn-sm flat glyphicon glyphicon-pencil", title = "Editar" })
                                    <span> </span>
                                    @Html.ActionLink(" ", "DeleteConfirmed", "Proveedor", new { id = item.IdProveedor }, new { @class = "btn btn-default btn-sm flat glyphicon glyphicon-trash", title = "Eliminar" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
<!-- DATA TABES SCRIPT -->

<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/1.0.7/js/dataTables.responsive.min.js" type="text/javascript"></script>
<!-- page script -->

<script type="text/javascript">
    $(function () {
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json",
            }
        });
    });
</script>

