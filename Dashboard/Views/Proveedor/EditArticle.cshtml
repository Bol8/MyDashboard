@model Repository.MateriaPrima

@{
    ViewBag.Title = "Editar articulo";
}

<div class="row">
    <div class="col-xs-12">

        <div class="FormHeader">
            <h3>@ViewBag.Title</h3>
            <hr />
        </div>

        <div class="FormBody">
            @using (Ajax.BeginForm("EditArticle", "Proveedor", null, new AjaxOptions { UpdateTargetId = "ProviderOptions", InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
            {
                @Html.HiddenFor(x => x.IdProveedor)
                @Html.HiddenFor(x => x.Id)
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="col-xs-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control CformControl" } })
                                <small>@Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })</small>
                            </div>
                        </div>


                        @*<div class="form-group">
                                @Html.LabelFor(model => model.NombreComercial, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NombreComercial, new { htmlAttributes = new { @class = "form-control CformControl" } })
                                    <small>@Html.ValidationMessageFor(model => model.NombreComercial, "", new { @class = "text-danger" })</small>
                                </div>
                            </div>*@



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary flat" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-xs-12">
                @Ajax.ActionLink("Volver", "Articles", "Proveedor", new { id = Model.IdProveedor }, new AjaxOptions { UpdateTargetId = "ProviderOptions", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-default flat" })

            </div>

        </div>
    </div><!-- /.col -->
</div><!-- /.row -->

<br />


