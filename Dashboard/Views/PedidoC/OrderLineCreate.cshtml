@model Domain.Models.PedidoC.mOderLineCreate

<div class="box box-primary flat">
    <div class="box-header with-border">
        <h3 class="box-title">Añadir detalle</h3>
    </div><!-- /.box-header -->
    <div class="box-body">

        <div class="form-horizontal">

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.IdArticulo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IdArticulo, Model.ArticleList, "-- Selecciona --", new { @class = "form-control CformControl",id="ArticleDrop" })
                        <small>@Html.ValidationMessageFor(model => model.IdArticulo, "", new { @class = "text-danger" })</small>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control CformControl" } })
                        <small>@Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })</small>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary flat" />
                    </div>
                </div>
            </div>
           
            <div class="col-md-6">
                <div class="well MyWell flat">
                    <h5 class="TitleHeader">Articulo</h5>
                    <div class="MyContent" id="ArtDetail">
                       @Html.Action("ArticleDetail","Article",new { id = 0})
                    </div>
                </div>
            </div>

        </div>
     

    </div><!-- /.box-body -->
</div><!-- /.box -->


<script type="text/javascript">

    $("#ArticleDrop").change(function () {
        var idArticle = $(this).val();
        console.log("idArticle " + idArticle);

        $.ajax({
            type: "POST",
            url: '@Url.Action("ArticleDetails", "Article")',
            data: { id: idArticle },
            dataType: 'html',
            success: function (data) {
               $("#ArtDetail").html(data)
            },
            error: function () {
               
            }
        });
    });

    


</script>