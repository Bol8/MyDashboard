@model IEnumerable<Domain.Models.PedidoC.mOrderLine>


@if (TempData["MessageSucces"] != null)
{
    <script>
        $(".MyInput").val('');
        $(".lbl").text('');
        var peso = '@TempData["Peso"]';
        var importe = '@TempData["Importe"]';
        $("#spPeso").text(peso)
        $("#spImporte").text(importe)
    </script>
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
<link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css"/>
<link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.bootstrap.min.css" rel="stylesheet" type="text/css" />


<div class="box box-primary flat">
    <div class="box-header with-border">
        <h3 class="box-title">Detalles pedido</h3>
    </div><!-- /.box-header -->
    <div class="box-body">

        <table id="example2" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"  width="100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Linea)</th>
                    <th>@Html.DisplayNameFor(model => model.sArticulo)</th>
                    <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.Peso)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalPeso) (Kg.)</th>
                    <th>@Html.DisplayNameFor(model => model.Total)</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.Linea)</td>
                        <td>@Html.DisplayFor(model => item.sArticulo)</td>
                        <td>@Html.DisplayFor(model => item.Cantidad)</td>
                        <td>@Html.DisplayFor(model => item.Precio) €</td>
                        <td>@Html.DisplayFor(model => item.Peso) gr.</td>
                        <td>@Html.DisplayFor(model => item.TotalPeso) Kg.</td>
                        <td>@Html.DisplayFor(model => item.Total) €</td>
                        <td>
                            @Ajax.ActionLink(" ", "DeleteOrderLine", "PedidoC",
                                             new { idOrder = item.Num_ped, idOrderLine = item.Linea },
                                             new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace ,UpdateTargetId = "Odrlist" },
                                             new { @class = "btn btn-default btn-sm flat glyphicon glyphicon-trash", title = "Eliminar" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div><!-- /.box-body -->
</div><!-- /.box -->



<!-- page script -->

<script type="text/javascript">
    $(function () {
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json",
            }
        });
    });
</script>

