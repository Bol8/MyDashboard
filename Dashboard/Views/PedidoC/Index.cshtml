@model IEnumerable<Domain.Models.PedidoC.mPedidoC>


@{
    ViewBag.Title = "Pedidos cliente";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/responsive/2.1.0/css/responsive.bootstrap.min.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-xs-12">
        <div class="box box-default flat">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
                @Html.ActionLink("Nuevo", "Create", "PedidoC", null, new { @class = "btn btn-primary pull-right flat" })
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Num_ped)</th>
                            <th>@Html.DisplayNameFor(model => model.clienteNombre)</th>
                            <th>@Html.DisplayNameFor(model => model.sEstado)</th>
                            <th>@Html.DisplayNameFor(model => model.sForma_pago)</th>
                            <th>@Html.DisplayNameFor(model => model.Fecha_A)</th>
                            <th>@Html.DisplayNameFor(model => model.Peso) (kg.)</th>
                            <th>@Html.DisplayNameFor(model => model.Importe)</th>
                            <th>@Html.DisplayNameFor(model => model.Observaciones)</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.Num_ped)</td>
                                <td>@Html.DisplayFor(model => item.clienteNombre)</td>
                                <td>@Html.DisplayFor(model => item.sEstado)</td>
                                <td>@Html.DisplayFor(model => item.sForma_pago)</td>
                                <td>@Html.DisplayFor(model => item.Fecha_A)</td>
                                <td>@Html.DisplayFor(model => item.Peso) kg.</td>
                                <td>@Html.DisplayFor(model => item.Importe) €</td>
                                <td>@Html.DisplayFor(model => item.Observaciones)</td>
                                <td>
                                    @Html.ActionLink(" ", "Edit", "PedidoC", new { id = item.Num_ped }, new { @class = "btn btn-default btn-sm flat glyphicon glyphicon-pencil", title = "Editar" })
                                    <span> </span>
                                    @Html.ActionLink(" ", "OpenOrder", "PedidoC", new { id = item.Num_ped }, new { @class = "btn btn-default btn-sm flat glyphicon glyphicon-plus", title = "Añadir articulos" })
                                    <span> </span>
                                    @Html.ActionLink(" ", "DeleteConfirmed", "PedidoC", new { id = item.Num_ped }, new { @class = "btn btn-default btn-sm flat glyphicon glyphicon-trash", title = "Eliminar" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->
<!-- DATA TABES SCRIPT -->

<script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/1.0.7/js/dataTables.responsive.min.js" type="text/javascript"></script>
<!-- page script -->

<script type="text/javascript">
    $(function () {
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json",
            }
        });
    });
</script>



